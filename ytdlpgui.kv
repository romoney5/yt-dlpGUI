ScreenManager:
    MainScreen:
    SecondScreen:

<MainScreen>:
    name: 'main'
    
    BoxLayout:
        orientation: 'vertical'
        padding: 10

        Label:
            text: 'Hello, Kivy!'

        TextInput:
            hint_text: 'Enter something...'
            id: url

        Button:
            text: 'Click Me'
            on_release: app.print_text()  # Call the print_text method of the app

<SecondScreen>:
    name: 'second'

    BoxLayout:
        orientation: 'vertical'
        padding: 10

        Label:
            text: 'Second Screen'

        Button:
            text: 'Go to Main Screen'
            on_release: root.manager.current = 'main'